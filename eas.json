{
  "cli": {
    "version": ">= 16.28.0",
    "appVersionSource": "remote"
  },

  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },

    "preview": {
      "distribution": "internal"
    },

    "production": {
      "autoIncrement": true,
      "android": {
        "buildType": "app-bundle"
      },
      "buildArtifactPaths": [
        "android/app/build/outputs/mapping/release/mapping.txt"
      ]
    },

    "apk": {
      "android": {
        "buildType": "apk"
      }
    }
  },

  "submit": {
    "production": {
      "android": {
        "track": "internal"
      }
    },

    "productionClosed": {
      "android": {
        "track": "production",
        "releaseStatus": "draft"
      }
    }
  }
}
